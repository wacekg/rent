<%= simple_form_for @booking do |f| %>
  <div class="form-group">
    <%= f.label :'Wybierz samochód' %>
    <%= f.association :car, label_method: :mark, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :Imię %>
    <%= f.text_field :last_name, class: "form-control" %>
    <%= f.label :Nazwisko %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :'Miejsce zamieszkania' %>
    <%= f.text_field :address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :'Adres e-mail' %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :Telefon %>
    <%= f.text_field :phone, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :Wyjazd %>
    <%= f.date_field :started_at, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :Powrót %>
    <%= f.date_field :ended_at, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :Potwierdzony %>
    <%= f.radio_button :approved, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Zapisz', class: "btn btn-primary" %>
  </div>
  <div class="form-group">
    <%= link_to 'Wróć', bookings_path, class: "btn btn-primary" %>
  </div>
<% end %>
