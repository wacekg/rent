<h1>Samochód</h1>
  <p>
    <%= image_tag (@car.image_url(:thumb).to_s) %>
  </p>
  <p>
    <strong>Marka: </strong>
    <%= "#{@car.mark}" %>
  </p>
  <p>
    <strong>Model: </strong>
    <%= "#{@car.model}" %>
  </p>
  <p>
    <strong>Rocznik: </strong>
    <%= "#{@car.year_prod}" %>
  </p>
  <p>
    <strong>Cena za dobę: </strong>
    <%= "#{@car.prince}" %>
  </p>
  <p>
    <strong>Limit dzienny: </strong>
    <%= "#{@car.limit}" %>
  </p>
  <strong>Dopłata ponad limit: </strong>
  <%= "#{@car.supplement}" %>
</p>
  <p>
    <strong>Opis: </strong>
    <%= "#{@car.description}" %>
  </p>
  <p>
    <strong>Przebieg: </strong>
    <%= "#{@car.mileage}" %>
  </p>
  <p>
    <strong>Rodzaj paliwa: </strong>
    <%= "#{@car.fuel}" %>
  </p>
  <p>
    <strong>Dostępny: </strong>
    <%= "#{@car.access}" %>
  </p>

  <h2>Opinia</h2>
    <% @car.comments.each do |comment| %>
      <%= render 'comments/comment', comment: comment %>
    <% end %>
    <%= render 'comments/form' %>

  <div class="form-group">
    <%= link_to 'Wróć', cars_path, class: "btn btn-primary" %>
  </div>
